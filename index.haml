    %script{:language => "javascript", :type => "text/javascript", :src => "lib/lawnchair-window-name.js"}
    %script{:language => "javascript", :type => "text/javascript", :src => "lib/zepto.js"}
    %script{:language => "javascript", :type => "text/javascript", :src => "lib/underscore.js"}
    %script{:language => "javascript", :type => "text/javascript", :src => "lib/backbone.js"}
    %script{:language => "javascript", :type => "text/javascript", :src => "lib/backbone.lawnchair.js"}
